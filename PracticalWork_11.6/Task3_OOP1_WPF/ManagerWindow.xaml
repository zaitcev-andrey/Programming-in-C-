        <ListBox x:Name="listBox"
                 Grid.ColumnSpan="2"
                 Margin="10,35,10,10" PreviewMouseLeftButtonDown="listBox_PreviewMouseLeftButtonDown"
                 >
            <!--xmlns:system="clr-namespace:System;assembly=mscorlib" 
                 ItemsControl.AlternationCount="{x:Static system:Int32.MaxValue}"-->

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <!--<TextBlock Text="{Binding Path=(ItemsControl.AlternationIndex), 
                                      RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}, 
                                      StringFormat={}Index is {0}, Mode=OneWay}"/>-->
                            <TextBlock x:Name="textBlock2FromList" TextWrapping="Wrap" Padding="5" Text="{Binding SecondName}"/>
                            <TextBlock x:Name="textBlock3FromList" TextWrapping="Wrap" Padding="5" Text="{Binding FirstName}"/>
                            <TextBlock x:Name="textBlock4FromList" TextWrapping="Wrap" Padding="5" Text="{Binding MiddleName}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>




        </ListBox>
        <Button x:Name="buttonLoadData" Content="Загрузить данные о клиентах" 
